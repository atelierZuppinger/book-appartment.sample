{% extends '::base.html.twig' %}

{% block title %}{{ 'theReceipts.title'|trans }} Â· {{ parent() }}{% endblock %}
{% block meta_description %}{{ 'theReceipts.seo.description'|trans }}{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/recette.css') }}" />
{% endblock %}


{% block body_class %}page-receipts{% endblock %}

{% block ambiance_picture %}
